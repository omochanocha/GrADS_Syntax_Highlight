{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GrADS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#executer"
		},
		{
			"include": "#function"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.grads",
					"match": "\\b(if|while|else|endif|endwhile|say|set|d)\\b"
				},
				{
					"name":"constant.numeric.grads",
					"match": "\\b\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?\\b"
				},
				{
					"name":"keyword.operator.grads",
					"match": "(?<='.*)(\\*|\\+|\\-|/)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.grads",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.grads",
					"match": "\\\\."
				}
			]
		},
		"comment":{
			"patterns": [
				{
					"name": "comment.line.grads",
					"match": "^\\*.*"
				},
				{
					"name": "comment.line.grads",
					"match": "#.*"
				}
			]
		},
		"variable":{

		},
		"executer":{
			"patterns": [
				{
					"name":"keyword.grads",
					"match": "(?<=')set"
				},
				{
					"name":"keyword.other.grads",
					"match": "(?<=')(d\\s)"
				}
			]
		},
		"function":{
			"patterns": [
				{
					"name":"support.function.grads",
					"match": "\\b(ave|mean|aave|tloop|max|min|maxloc|minloc|vint|cdiff|hcurl|hdivg|maskout|const|tcorr|tregr|pow|smth9|lterp|exp|log|mag)\\b"
				}
			]

		}
	},
	"scopeName": "source.gs"
}