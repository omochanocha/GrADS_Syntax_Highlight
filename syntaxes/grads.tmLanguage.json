{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GrADS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#execute"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.grads",
					"match": "\\b(if|while|else|endif|endwhile)\\b"
				},
				{
					"name":"constant.numeric.grads",
					"match": "\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?"
				},
				{
					"name":"keyword.operator.grads",
					"match": ".\\*|\\+|-|/"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.grads",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.grads",
					"match": "\\\\."
				}
			]
		},
		"comment":{
			"patterns": [
				{
					"name": "comment.line.grads",
					"match": "^\\*.*"
				},
				{
					"name": "comment.line.grads",
					"match": "#.*"
				}
			]
		},
		"variable":{

		},
		"execute":{
		}
	},
	"scopeName": "source.gs"
}