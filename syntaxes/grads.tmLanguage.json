{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GrADS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#executers"
		},
		{
			"include": "#support"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.grads",
					"match": "\\b(if|while|else|endif|endwhile|say|set|d|display|open|sdfopen)\\b"
				},
				{
					"name": "constant.numeric.grads",
					"match": "\\b\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?\\b"
				},
				{
					"name": "keyword.operator.grads",
					"match": "(?<='.*)(\\*)|\\+|\\-|/|=|%"
				},
				{
					"comment": "色、描画系",
					"name": "constant.other.grads",
					"match": "\\b(cbarn|xcbar|color|gxprint|draw)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.grads",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.grads",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.grads",
					"match": "^\\*.*"
				},
				{
					"name": "comment.line.grads",
					"match": "#.*"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.language.grads",
					"match": "\\b(lon|lat|lev|time)\\b"
				}
			]
		},
		"support": {
			"patterns": [
				{
					"name": "support.function.grads",
					"match": "\\b(ave|mean|aave|tloop|max|min|maxloc|minloc|vint|cdiff|hcurl|hdivg|maskout|const|tcorr|tregr|pow|smth9|lterp|exp|log|mag)\\b"
				}
			]
		}
	},
	"scopeName": "source.gs"
}