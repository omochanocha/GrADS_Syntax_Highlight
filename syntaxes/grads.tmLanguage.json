{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GrADS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.grads",
				"match": "\\b(if|while|for|return|endif|endwhile)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.grads",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.grads",
					"match": "\\\\."
				}
			]
		},
		"comment":{
			"patterns": [
				{
				"name": "comment.line.grads",
				"match": "^\\*.*"
			},
			{
				"name": "comment.line.grads",
				"match": "#.*"
			}
		]
		}
	},
	"scopeName": "source.gs"
}